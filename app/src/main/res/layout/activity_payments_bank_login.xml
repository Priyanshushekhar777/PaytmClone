<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentsBankLoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="230dp"
        android:layout_height="108dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/image1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="205dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:text="India's most Sincere bank"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="104dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="257dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Login to your Paytm Payments Bank Savings Account"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="134dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="222dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:ems="10"
        android:inputType="phone"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="306dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignParentBottom="true"
        android:ems="10"
        android:inputType=""
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="218dp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="228dp"
        android:layout_height="36dp"
        android:layout_above="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Registered Mobile Number"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="181dp" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText2"
        android:layout_alignStart="@+id/editText"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter Passcode"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="266dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="134dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@color/design_default_color_primary"
        android:text="Login Securely"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="359dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="127dp"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/editText6"
        android:layout_alignParentBottom="true"
        android:text="Forgot Passcode ?"
        android:textColor="@android:color/holo_blue_light"
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="375dp" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>